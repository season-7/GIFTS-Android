<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mitchelle.giftzawadi.ThanksNoteActivity">

    <com.example.mitchelle.giftzawadi.AnimatedText
        android:id="@+id/thanksnote"
        android:padding="10dp"
        android:textColor="@color/input_login_hint"
        android:layout_width="match_parent"
        android:text="Thanks for using this app,would tou like to;"
        android:textSize="35sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pickanother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:padding="5dp"
        android:text="Pick another gift"
        android:layout_alignTop="@+id/shareapp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Share app"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:id="@+id/shareapp"
        android:layout_below="@+id/thanksnote"
        android:layout_alignEnd="@+id/thanksnote"
        android:layout_marginTop="183dp" />


</RelativeLayout>
