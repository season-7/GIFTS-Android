<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">


        <ImageView
            android:layout_width="@dimen/logo_w_h"
            android:layout_height="@dimen/logo_w_h"
            android:layout_gravity="center_horizontal"

            android:src="@mipmap/ic_launcher" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/nameofgift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="name of gift"
                android:inputType="textEmailAddress"
                android:textColor="@color/email_suggestions"
                android:textColorHint="@color/input_login_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/priceofgift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:hint="price"
                android:inputType="textEmailAddress"
                android:textColor="@color/email_suggestions"
                android:textColorHint="@color/input_login_hint" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/gifturl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:hint="url"
                android:inputType="text"
                android:textColor="@color/email_suggestions"
                android:textColorHint="@color/input_login_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/giftdescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:hint="gift description"
                android:inputType="text"
                android:textColor="@color/email_suggestions"
                android:textColorHint="@color/input_login_hint" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/input_login_hint"

            android:text="submit"
            android:textColor="@android:color/white" />
</LinearLayout>
    </LinearLayout>

