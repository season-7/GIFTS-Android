<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mitchelle.giftzawadi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
   android:largeHeap="true"
    android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityLogin" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ActivityResetPassword" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ActivityMenu"
            android:label="@string/title_activity_activity_menu"
            android:theme="@style/AppTheme" />
        <activity android:name=".AgeActivity" />
        <activity android:name=".PersonalityDescriptionActivity"></activity>
    </application>

</manifest>